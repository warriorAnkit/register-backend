{
  "version": 2,
  "builds": [
    {
      "src": "src/index.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "src/**/*.js",
          "src/**/*.gql",
          "src/**/*.graphql",
          "src/**/*.json"
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "src/index.js"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "PORT": "3000"
  },
  "build": {
    "env": {
      "NODE_VERSION": "20.18.1",
      "NPM_VERSION": "10.8.2"
    }
  }
}
